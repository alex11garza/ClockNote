{
  "name": "time-tracker",
  "version": "1.0.0",
  "description": "A lightweight offline time tracking application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:all": "electron-builder --win --mac --linux"
  },
  "keywords": ["time-tracker", "harvest", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.clocknote.app",
    "productName": "ClockNote",
    "win": {
      "target": ["nsis", "portable"],
      "icon": "A_flat-style_digital_vector_icon_features_a_stopwa.png"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "A_flat-style_digital_vector_icon_features_a_stopwa.png"
    ]
  }
